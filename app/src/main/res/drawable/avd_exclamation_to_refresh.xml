<?xml version="1.0" encoding="utf-8"?>
<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/ic_exclamation">

    <target
        android:name="rotationGroup"
        android:animation="@animator/rotation_btw_refresh_exclamation"/>

    <target android:name="bezier1">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="@integer/animation_duration"
                android:interpolator="@android:interpolator/decelerate_quad"
                android:propertyName="pathData"
                android:valueFrom="@string/path_exclamation_bezier1"
                android:valueTo="@string/path_refresh_bezier1"
                android:valueType="pathType"/>
        </aapt:attr>
    </target>

    <target android:name="bezier2">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="@integer/animation_duration"
                android:interpolator="@android:interpolator/decelerate_quad"
                android:propertyName="pathData"
                android:valueFrom="@string/path_exclamation_bezier2"
                android:valueTo="@string/path_refresh_bezier2"
                android:valueType="pathType"/>
        </aapt:attr>
    </target>

    <target android:name="bezier3">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="@integer/animation_duration"
                android:interpolator="@android:interpolator/decelerate_quad"
                android:propertyName="pathData"
                android:valueFrom="@string/path_exclamation_bezier3"
                android:valueTo="@string/path_refresh_bezier3"
                android:valueType="pathType"/>
        </aapt:attr>
    </target>

    <target android:name="arrow">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="@integer/animation_duration"
                android:interpolator="@android:interpolator/decelerate_quad"
                android:propertyName="pathData"
                android:valueFrom="@string/path_exclamation_arrow"
                android:valueTo="@string/path_refresh_arrow"
                android:valueType="pathType"/>
        </aapt:attr>
    </target>

    <target android:name="dot">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:duration="@integer/animation_duration"
                android:interpolator="@android:interpolator/decelerate_quad"
                android:propertyName="pathData"
                android:valueFrom="@string/path_exclamation_dot"
                android:valueTo="@string/path_refresh_dot"
                android:valueType="pathType"/>
        </aapt:attr>
    </target>

</animated-vector>
